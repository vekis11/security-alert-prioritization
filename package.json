{
  "name": "security-alert-prioritization",
  "version": "1.0.0",
  "description": "AI-powered security alert and vulnerability prioritization dashboard",
  "main": "server/index.js",
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File start-dashboard.ps1",
    "server": "nodemon server/index.js",
    "client": "cd client; npm start",
    "build": "cd client; npm run build",
    "start": "node server/index.js",
    "install-all": "npm install; cd client; npm install",
    "start:server": "node server/index.js",
    "start:client": "cd client; npm start",
    "kill-all": "Get-Process -Name node -ErrorAction SilentlyContinue | Stop-Process -Force",
    "restart": "npm run kill-all; npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:snyk": "snyk test",
    "security:snyk:monitor": "snyk monitor",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit",
    "ci:install": "npm ci",
    "ci:test": "npm run test -- --coverage --watchAll=false",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint",
    "ci:format": "npm run format:check",
    "precommit": "npm run lint && npm run format:check && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "@slack/web-api": "^6.9.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "supertest": "^6.3.3",
    "eslint": "^9.38.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "snyk": "^1.1248.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "security",
    "vulnerability",
    "prioritization",
    "dashboard",
    "ai",
    "tenable",
    "crowdstrike",
    "veracode",
    "splunk",
    "snyk",
    "ci-cd",
    "devsecops"
  ],
  "author": "Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vekis11/security-alert-prioritization.git"
  },
  "bugs": {
    "url": "https://github.com/vekis11/security-alert-prioritization/issues"
  },
  "homepage": "https://vekis11.github.io/security-alert-prioritization"
}